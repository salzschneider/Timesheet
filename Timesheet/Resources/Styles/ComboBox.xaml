<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Margin" Value="5, 5, 5, 15"/>
        <Setter Property="Height" Value="23"/>
    </Style>

    <Style x:Key="HourMinutesSelector" BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="{x:Type ComboBox}">
        <Setter Property="Width" Value="40" />
        <Setter Property="Margin" Value="5, 0, 5, 10"/>
    </Style>

    <Style x:Key="UserSelectorReport" BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="{x:Type ComboBox}">
        <Setter Property="Width" Value="120" />
        <Setter Property="Height" Value="25"/>
        <Setter Property="Margin" Value="0, 10, 20, 10"/>
    </Style>

</ResourceDictionary>